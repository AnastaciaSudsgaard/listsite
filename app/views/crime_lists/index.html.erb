  </div>

<ul class='list-group'>
  <% @crime_lists.each do |crime_list| %>
    <%= link_to crime_list, class: 'text-docoration-none' do %>
    <li class="list-group-item d-flex justify-content-between"> 
  
    <div>
    <h6 class='m-0 text-dark'>
    <b><%= crime_list.title %></b>
    <span class="badge badge-<%= crime_list.badge_color%>" style="position: absolute; right: 30px;"><%= crime_list.status %></span>
    

    </h6>
    <p class='text-secondary m-0'><small><%=crime_list.percent_complete%>% Complete 
